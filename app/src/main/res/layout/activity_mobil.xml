<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trex.parkirBDL.kendaraan.Motor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/toolbar_back_mobil"/>


                </LinearLayout>

                <ImageView
                    android:layout_marginTop="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/logoparkir"
                    android:elevation="4dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="165dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="360dp"
                    android:layout_height="520dp"
                    android:background="@color/secondaryColor"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_marginTop="120dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <Spinner
                            android:id="@+id/list_kecamatan"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginStart="50dp"
                            android:entries="@array/list_kecamatan"
                            android:layout_marginEnd="50dp"
                            android:gravity="center"/>

                        <Button
                            android:id="@+id/pilih_kecamatan"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="25dp"
                            android:layout_width="150dp"
                            android:layout_height="45dp"
                            android:text="Kecamatan"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/secondaryColor"
                            android:background="@drawable/tombol"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>